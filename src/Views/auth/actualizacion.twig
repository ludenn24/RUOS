    function buscarDni() {
        var dni;
        var usuario;
        var pass;

        usuario = 'GPV01';
        pass = '$GPV.2019';
        dni = $("#dni").val();
        
        if (dni.length == 8) {
            BuscarPersonaDNI_WS_propietario('', dni, '', '', usuario, pass);
        } else {
