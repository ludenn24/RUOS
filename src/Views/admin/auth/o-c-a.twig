    <script type="text/javascript">



        $( document ).ready(function() {
            ListarSolicitudes();
        })

        function format ( d ) {
            return '<div class="col-md-8"><div class="col-md-12"><p style="float: left;"><strong>DIRECCIÓN: </strong> '+d.tipo_sol+'</p><br></div>'+
                '<div class="col-md-12"><p style="float: left;"><strong>TIPO: </strong>'+d.tipo_sol+'</p></div>'+
                '<div class="col-md-12"><p style="float: left;"><strong>DISTRITO: </strong>'+d.tipo_sol+'</p></div></div>';
        }

        var childRows = null;

        function ListarSolicitudes(estado){

            var titulo;

            titulo = estado;

            if (titulo == 1){
                titulo="SOLICITUDES INCOMPLETAS";
            }else if (titulo == 2){
                titulo="SOLICITUDES PENDIENTES";
            }else if (titulo == 3){
                titulo="SOLICITUDES APROBADAS";
            }else if (titulo == 4){
                titulo="SOLICITUDES ARCHIVADAS";
            }else{
                titulo="SOLICITUDES";
            }

            document.getElementById("tipodesol").innerHTML = titulo ;

            responsive: true

            var dt =  $('#Solicitudes').DataTable( {
                processing: true,
                ordering: true,
                destroy: true,
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf'
                ],
                "language": {
                    "lengthMenu": "Ver _MENU_ registros por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Viendo página _PAGE_ de _PAGES_",
                    "infoEmpty": "No se encontraron responsables",
                    "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "search":         "Buscar:",
                    "paginate": {
                        "first":      "Primero",
                        "last":       "Último",
                        "next":       "Siguiente",
                        "previous":   "Anterior"
                    },
                },
                "ajax":{
                    "type":"get",
                    "url":"{{ base_url() }}/admin/listaorganizacionescercadoaprobadas",
                    "data": {
                        tipo_sol: 1,
                        estado : estado,
                    }
                },
                "columns":[
                    {"data":"casa"},
                    {"data":"telefono"},
                    {"data":"correo"},
                    {"data":"nombre_org"},
                    {"data":"descripcion"},
                    {
                        "data": "subtipo",
                        render: function(data) {
                            if(data==null) {
                                return '---';
                            }
                            else{
                                return data;
                            }
                        },
                    },
                    {"data":"fecha_constitucion"},
                    {"data":"domicilio_org"},
                    {"data":"num_res"},
                    {
                        "data": "ruta",
                        render: function(data) {
                            return "<a target='_blank'"+
                                " style='cursor:pointer;overflow: visible;'"+
                                " href='http://ruos.gpvlima.com/"+data+"'>"+
                                " http://ruos.gpvlima.com/"+data+"</a>"
                        },
                    },
                ],
            } );
        }

    </script>
