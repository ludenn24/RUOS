    <script type="text/javascript">



        $( document ).ready(function() {
            ListarAsesorias();
        })

        function format ( d ) {

            if (d.observaciones){
                return '<div class="col-md-8"><div class="col-md-12"><p style="float: left;"><strong>OBSERVACIONES: </strong> '+d.observaciones+'</p><br></div>';
            }else{
                return '<div class="col-md-8"><div class="col-md-12"><p style="float: left;"><strong>OBSERVACIONES: </strong> No se registraron observaciones.</p><br></div>';
            }

        }

        var childRows = null;

        function ListarAsesorias(estado){

            var titulo;

            titulo = estado;

            if (titulo == 1){
                titulo="ASESORIAS PENDIENTES";
            }else if (titulo == 2){
                titulo="ASESORIAS ATENDIDAS";
            }else{
                titulo="ASESORIAS";
            }

            document.getElementById("tipodease").innerHTML = titulo ;

            responsive: true

            var dt =  $('#Asesorias').DataTable( {


                destroy: true,
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf'
                ],

                "language": {
                    "lengthMenu": "Ver _MENU_ registros por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Viendo página _PAGE_ de _PAGES_",
                    "infoEmpty": "No se encontraron responsables",
                    "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "search":         "Buscar:",
                    "paginate": {
                        "first":      "Primero",
                        "last":       "Último",
                        "next":       "Siguiente",
                        "previous":   "Anterior"
                    },
                },

                "ajax":{
                    "type":"get",
                    "url":"{{ base_url() }}/admin/listaasesorias",
                    "data": {
                        estado : estado,
                    }
                },

                "columns":[
                    {
                        "class":          "details-control",
                        "orderable":      false,
                        "data":           null,
                        "defaultContent": ""
                    },
                    {
                        "data": "dni",
                        render: function(data) {
                            if(data==null) {
                                return '---';
                            }
                            else{
                                return data;
                            }

                        },
                    },
                    {"data":"nombres",},
                    {"data":"apellido_pat"},

                    {"data":"telefono"},
                    {"data":"nom_org"},
                    {
                        "data": "medio",
                        render: function(data) {
                            if(data=="1") {
                                return "Telefónico";
                            }
                            else if(data=="2") {
                                return "Hangouts";
                            }
                            else{
                                return "Zoom";
                            }

                        },
                    },
                    {"data":"fecha_ase"},
                    {"data":"hora_ase"},
                    {
                        "data": "estado",
                        render: function(data) {
                            if(data=="1") {
                                return "<span class='label label-warning'>Pendiente</span>";
                            }else if(data=="2") {
                                    return "<span class='label label-success'>Atendido</span>";
                            }
                            else{
                                return "<span class='label label-danger'>Eliminado</span>";
                            }

                        },
                    },
                    {
                        "data": "codigo",
                        render: function(data) {
                            return "<a class='btn btn-default'"+
                                "style='cursor:pointer;overflow: visible;'"+
                                "onclick='abrircita("+data+")'"+
                                "data-toggle='modal'"+
                                "data-content=''>"+
                                "Atender</a>"

                        },
                    },
                ],
                columnDefs: [
                    {
                        className: 'text-center',
                        targets: [1,2,3,5],
                    },

                    { width: "3%",
                        targets: [0] },

                    { width: "30%",
                        targets: [5] },

                ]
            } );

            var detailRows = [];

            $('#Asesorias tbody').off('click', 'tr td.details-control');
            $('#Asesorias tbody').on( 'click', 'tr td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = dt.row( tr );

                if ( row.child.isShown() ) {
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    // Open this row
                    d = row.data();
                    row.child( format(d) ).show();
                    tr.addClass('shown');
                }
            } );

            dt.on( 'draw', function () {
                if (childRows) {

                    childRows.every(function ( rowIdx, tableLoop, rowLoop ) {
                        d = this.data();
                        this.child($(format(d))).show();
                        this.nodes().to$().addClass('shown');
                    } );
                    childRows = null;
                }
            } );

        }
        function abrircita(codigo) {
            var  codigo = codigo;

            $('#modalAtencion').modal('show');
            $('#codigo').val(codigo);
            $(".msg").html("");
            $(".msg").fadeIn(1500);
        }
    </script>

